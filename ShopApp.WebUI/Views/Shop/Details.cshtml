@model Product


<div class="row ">
     <div class="col-md-3">
            <img src="~/img/@Model.ImageUrl" class="img-fluid">
        </div>
        <div class="col-md-9">

            <h1 class="mb-3">@Model.Name</h1> <hr/>
            <a href="#" class="btn btn-link p-0 mb-3">Telefon | Elektronika</a>
            <div class="mb-3">
                <h4 class="text-primary mb-3">
                    @Model.Price ₼
                </h4>
            </div>
            <button type="submit" class="btn btn-primary">Add To Card</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p class="p-3">@Model.Description</p>
        </div>
</div>